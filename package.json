{
  "name": "white-dwarf",
  "version": "1.0.0",
  "description": "Data oriented game engine based on ECSY.",
  "files": [
    "src",
    "submodules"
  ],
  "module": "dist/index.esm.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build-core": "esbuild --bundle --sourcemap src/Core/index.ts --outfile=dist/Core/index.js",
    "build-editor": "esbuild --bundle --sourcemap src/Editor/index.ts --outfile=dist/Editor/editor.js",
    "start-editor": "esbuild --bundle --sourcemap src/Editor/index.ts --outfile=dist/Editor/editor.js --servedir=dist/Editor",
    "watch-editor": "esbuild --bundle --sourcemap src/Editor/index.ts --outfile=dist/Editor/editor.js --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Fangjun-Zhou/White-Dwarf.git"
  },
  "author": "Fangjun Zhou",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Fangjun-Zhou/White-Dwarf/issues"
  },
  "homepage": "https://github.com/Fangjun-Zhou/White-Dwarf#readme",
  "dependencies": {
    "esbuild": "^0.15.10",
    "gl-matrix": "^3.4.3",
    "js-file-download": "^0.4.12"
  },
  "peerDependencies": {},
  "devDependencies": {
    "npm-dts": "^1.3.12",
    "typescript": "^4.8.4"
  }
}
